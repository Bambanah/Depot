---
type Size = "xs" | "sm" | "md" | "lg" | "xl";

const sizeStyleMap: Record<Size, string> = {
	xs: "",
	sm: "",
	md: "text-4xl",
	lg: "text-5xl",
	xl: "text-6xl",
};

export interface Props {
	size?: Size;
}

const { size } = Astro.props;
---

<h1 class={`font-heading ${sizeStyleMap[size ?? "md"]}`}><slot /></h1>
